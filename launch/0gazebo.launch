<!-- <?xml version="1.0"?> -->
<launch>

      <arg name="x_pos" default="0.0"/>
      <arg name="y_pos" default="0.0"/>
      <arg name="z_pos" default="1.0"/>

      <arg name="ticks_per_meter" value="76.433" />
      <arg name="wheel_separation" value="0.75" />

      <include file="$(find gazebo_ros)/launch/empty_world.launch">
            <!-- <arg name="world_name" value="$(find test_mr)/worlds/room.world"/> -->
            <!-- <arg name="world_name" value="$(find spmr02)/worlds/0.sdf"/> -->
            <arg name="world_name" value="$(find spmr02)/worlds/0.sdf"/>
            <arg name="paused" value="false"/>
            <arg name="use_sim_time" value="true"/>
            <arg name="gui" value="true"/>
            <arg name="headless" value="false"/>
            <arg name="debug" value="false"/>
      </include>  
  
      <node pkg="gazebo_ros" 
            type="spawn_model" 
            name="spawn_urdf" 
            args="-urdf 
                  -model spmr02 
                  -x $(arg x_pos)
                  -y $(arg y_pos)
                  -z $(arg z_pos)
                  -param robot_description" />

      <rosparam file="$(find spmr02)/config/controller_common.yaml" command="load"/>
      <rosparam file="$(find spmr02)/config/pid.yaml"               command="load"/>

      <param name="robot_description" textfile="$(find spmr02)/urdf/spmr02.urdf" />
  
      <node name="spmr_go_to_goal" pkg="spmr02" type="spmr_go_to_goal" 
            respawn="true" output="screen"/>  
      <node name="spmr_controller" pkg="spmr02" type="spmr_controller" 
            respawn="true" output="screen"/>  
      <!-- <node name="spmr_PathFind" pkg="spmr02" type="spmr_PathFind" 
            respawn="true" output="screen"/>   -->
      <!-- <node name="spmr_canopen" pkg="spmr02" type="spmr_canopen" 
            respawn="true" output="screen"/>   -->

      <node name="spmr_QR_tracker_L" pkg="spmr02" type="spmr_QR_tracker_L" 
            respawn="true" output="screen"/>  
      <node name="spmr_QR_tracker_R" pkg="spmr02" type="spmr_QR_tracker_R" 
            respawn="true" output="screen"/>  
      
      <node name="spmr_coordinate_calc" pkg="spmr02" type="spmr_coordinate_calc" 
            respawn="true" output="screen"/>  

      <!-- <node name="spmr_std_visualizer" pkg="spmr02" type="spmr_std_visualizer" 
            respawn="true" output="screen"/>   -->

      <!-- <node name="spmr_coordinate_calc" pkg="spmr02" type="spmr_coordinate_calc" 
            respawn="true" output="screen" 
            args="
                  gazebo
            "/>   -->

